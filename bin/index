#!/usr/bin/env node

var program = require('commander')

var pkg = require('../package.json')
var bifypack = require('../lib/main')

program
  .version(pkg.version)
  .usage('bifypack <task>')
  .option('-e, --extension <dir>', '扩展task的目录')

program.parse(process.argv)

bifypack.run(program.args[0], program)
